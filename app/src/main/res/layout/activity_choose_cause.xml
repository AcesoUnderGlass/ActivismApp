<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.assembleapp.activismapp.ChooseCauseActivity"
    android:background="@color/background_orange">

    <TextView android:text="@string/choose_cause_title"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="20pt"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/go_button"
        android:layout_alignEnd="@+id/go_button"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save for Next Time"
        android:id="@+id/save_data_checkbox"
        android:checked="false"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/go_button"
        android:layout_alignBottom="@+id/title"
        android:layout_toRightOf="@+id/save_data_checkbox"
        android:background="@drawable/yellow_button"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:layout_below="@+id/go_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"/>


</RelativeLayout>
